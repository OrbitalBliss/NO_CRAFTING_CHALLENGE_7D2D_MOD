<nocraftingchallenge>
<!--================================
	ASSIGN/FIXING ECONOMIC VALUES AND REPAIR MATERIALS
	================================ -->

	<append xpath="/blocks/block[@name='cntWaterCoolerFull']">
			<property name="EconomicValue" value="44"/>
			<property class="RepairItems"> <property name="resourceScrapPolymers" value="4"/> </property>
	</append>
	<append xpath="/blocks/block[@name='cntBookcaseFull']">
			<property name="EconomicValue" value="24"/>
			<property class="RepairItems"> <property name="resourceWood" value="4"/> </property>
	</append>

<!--================================
	PUT WEIGHTS ON STUFF SO THEY CAN STILL BE SCRAPPED EVEN THOUGH ALL THE RECIPES ARE GONE
	================================ -->
	<append xpath="/blocks/block[@name='toolCookingPot']">
		<property name="Weight" value="5"/>
	</append>
	<append xpath="/blocks/block[@name='woodChair1']">
		<property name="Weight" value="6"/>
	</append>
	<append xpath="/blocks/block[@name='oldChair1']">
		<property name="Weight" value="6"/>
	</append>


<!--================================
	FIX SNOWBERRY GROWTH STATE (from Home Depot Mod)
	================================ -->

	<set xpath="/blocks/block[@name='plantedSnowberry2']/property[@name='PlantGrowing.Next']/@value">plantedSnowberry3HarvestPlayer</set>


<!--================================
	FIX SOME STRANGE (overlooked?) UPGRADES & REPAIRS (from Home Depot Mod)
	================================ -->

	<append xpath="/blocks/block[@name='woodFenceFarmSheet']">
		<property class="UpgradeBlock"> <property name="ToBlock" value="woodFenceSheet"/> </property>
	</append>
	<append xpath="/blocks/block[@name='woodFenceFarmSheetBroken1']">
		<property class="UpgradeBlock"> <property name="ToBlock" value="woodFenceFarmSheet"/> </property>
	</append>
	<append xpath="/blocks/block[@name='woodFenceFarmSheetBroken2']">
		<property class="UpgradeBlock"> <property name="ToBlock" value="woodFenceFarmSheet"/> </property>
	</append>
	<append xpath="/blocks/block[@name='whitePicketFenceSheet']">
		<property class="UpgradeBlock">
			<property name="ToBlock" value="wroughtIronFenceSheet"/>
			<property name="Item" value="resourceScrapIron"/>
			<property name="ItemCount" value="10"/>
			<property name="UpgradeHitCount" value="4"/>
		</property>
	</append>
	<append xpath="/blocks/block[@name='decoPicnicTable']">
		<property class="RepairItems">
			<property name="resourceWood" value="8"/>
		</property>
	</append>

</nocraftingchallenge>